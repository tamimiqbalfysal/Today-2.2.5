rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Posts can be read by anyone, but only created, updated, or deleted by their author.
    match /posts/{postId} {
      allow read: if true;
      allow create, update: if request.auth != null && request.resource.data.authorId == request.auth.uid;
      allow delete: if request.auth != null && request.auth.uid == resource.data.authorId;
    }
    
    // Users can read any profile, but only create, update, or delete their own.
    match /users/{userId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Notifications are private to each user.
    match /users/{userId}/notifications/{notificationId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Usernames can be read by anyone, but only created or deleted by the associated user.
    match /usernames/{username} {
      allow read: if true;
      allow create: if request.auth != null;
      allow delete: if request.auth != null && resource.data.uid == request.auth.uid;
    }
    
    // Gift codes can be read and updated by authenticated users.
    match /giftCodes/{codeId} {
        allow read, update: if request.auth != null;
    }
    
    // Think codes can be read and updated by authenticated users.
    match /thinkCodes/{codeId} {
        allow read, update: if request.auth != null;
    }
  }
}
