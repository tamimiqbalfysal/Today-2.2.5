rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if a user is the owner of a document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users Collection
    // - Anyone authenticated can read any user's profile.
    // - A user can create their own profile upon signup.
    // - A user can only update or delete their own profile.
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);

      // Notifications Subcollection
      // - A user can only manage their own notifications.
      match /notifications/{notificationId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Usernames Collection
    // - Used to ensure usernames are unique.
    // - Authenticated users can read to check for availability.
    // - A user can create their own username document upon signup.
    // - A user can only delete their own username document.
    match /usernames/{username} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.uid == request.auth.uid;
    }

    // Posts Collection
    // - Any authenticated user can read any post.
    // - An authenticated user can create a post.
    // - A user can only update or delete their own posts.
    match /posts/{postId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.authorId == request.auth.uid;
    }

    // Gift Codes Collection (for "Thank u, G!")
    // - Authenticated users can read codes to check their status.
    // - Authenticated users can update a code to mark it as used.
    // - Only admins (not defined here, so effectively no one) can create/delete.
    match /giftCodes/{codeId} {
        allow read: if isAuthenticated();
        allow update: if isAuthenticated();
        allow create, delete: if false; 
    }
    
    // Think Codes Collection (for the popup)
    // - Authenticated users can read codes to check their status.
    // - Authenticated users can update a code to mark it as used.
    // - Only admins (not defined here, so effectively no one) can create/delete.
    match /thinkCodes/{codeId} {
        allow read: if isAuthenticated();
        allow update: if isAuthenticated();
        allow create, delete: if false; 
    }
  }
}
